<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.android.dfr.tibetan_dfr">
    <uses-permission android:name="android.permission.SET_DEBUG_APP"
        tools:ignore="ProtectedPermissions"></uses-permission>
    <application
        android:hardwareAccelerated="false"
        android:allowBackup="true"
        android:icon="@drawable/logotibetan"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Splash">

        <activity android:name=".SplashScreen"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".GlossaryActivity" android:theme="@style/AppTheme"/>
        <activity android:name=".IntroActivity" android:theme="@style/AppTheme"/>
        <activity android:name=".MainActivity" android:theme="@style/AppTheme"/>
        <activity android:name=".NoteActivity" android:theme="@style/AppTheme"/>
        <activity android:name=".HighlighActivity" android:theme="@style/AppTheme"/>
        <activity android:name=".FavouriteActivity" android:theme="@style/AppTheme"/>
        <activity android:name=".HistoryActivity" android:theme="@style/AppTheme"/>
        <activity android:name=".SearchActivity" android:theme="@style/AppTheme"/>
        <activity android:name=".SingleItemView" android:theme="@style/AppTheme"/>
        <activity
            android:name=".CrossIconActivity" android:theme="@style/AppTheme"/>
        <activity android:name=".SettingsActivity" android:theme="@style/AppTheme"/>
        <activity android:name=".FontSizeActivity" android:theme="@style/AppTheme"/>

        <activity
            android:name=".FontActivity" android:theme="@style/AppTheme"/>
        <activity
            android:name=".PersonalActivity" android:theme="@style/AppTheme"/>

        <activity
            android:name=".Cross.RecyclerViewFragment" android:theme="@style/AppTheme"/>
    </application>

</manifest>