<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#01000000</item>
    </style>

    <style name="BrandedSwitch" parent="AppTheme">
        <item name="colorAccent">#007AFF</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">#01000000</item>
        <item name="colorAccent">#E8E8E8</item>
    </style>

    <style name="Splash" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#01000000</item>
        <item name="android:windowBackground">@drawable/ntblg</item>
        <item name="android:windowFullscreen">true</item>

    </style>

</resources>
